<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ApplyVisaController">
    <center>
        <VBox spacing="15" alignment="CENTER">
            <padding>
                <Insets top="40" right="40" bottom="40" left="40"/>
            </padding>
            <Button text="Back" onAction="#goBack" style="-fx-background-color: #0B3D91; -fx-text-fill: white; -fx-font-size: 14px;" alignment="TOP_LEFT"/>
            <Label text="Apply for Visa" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #0B3D91;"/>
            <GridPane hgap="10" vgap="10">
                <Label GridPane.columnIndex="0" GridPane.rowIndex="0" text="Visa Type:" style="-fx-text-fill: #0B3D91;"/>
                <TextField fx:id="visaTypeField" GridPane.columnIndex="1" GridPane.rowIndex="0" promptText="Visa Type"/>
                <Label GridPane.columnIndex="0" GridPane.rowIndex="1" text="Country:" style="-fx-text-fill: #0B3D91;"/>
                <TextField fx:id="countryField" GridPane.columnIndex="1" GridPane.rowIndex="1" promptText="Country"/>
            </GridPane>
            <Button text="Apply" onAction="#applyVisa" style="-fx-background-color: #0B3D91; -fx-text-fill: white; -fx-font-size: 14px;"/>
        </VBox>
    </center>
</BorderPane>