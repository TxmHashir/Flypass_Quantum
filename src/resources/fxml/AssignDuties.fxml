<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="AssignDutiesController">
    <center>
        <VBox alignment="CENTER" prefHeight="503.0" prefWidth="895.0" spacing="15">
            <padding>
                <Insets bottom="40" left="40" right="40" top="40" />
            </padding>
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #0B3D91;" text="Assign Duties" />
            
            <HBox alignment="CENTER" spacing="20">
                <VBox spacing="10">
                    <Label text="Available Duties" />
                    <TableView fx:id="availableTable" prefHeight="300" prefWidth="300">
                        <columns>
                            <TableColumn fx:id="availTimeCol" prefWidth="150" text="Time" />
                            <TableColumn fx:id="availLocationCol" prefWidth="200" text="Location" />
                            <TableColumn fx:id="availFlightCol" prefWidth="100" text="Flight #" />
                        </columns>
                    </TableView>
                </VBox>

                <VBox alignment="CENTER" spacing="10">
                    <Button onAction="#addDuty" style="-fx-background-color: #0B3D91; -fx-text-fill: white;" text="&gt;&gt;" />
                    <Button onAction="#removeDuty" style="-fx-background-color: #0B3D91; -fx-text-fill: white;" text="&lt;&lt;" />
                </VBox>

                <VBox spacing="10">
                    <Label text="Assigned Duties" />
                    <TableView fx:id="assignedTable" prefHeight="300" prefWidth="300">
                        <columns>
                            <TableColumn fx:id="assignTimeCol" prefWidth="150" text="Time" />
                            <TableColumn fx:id="assignLocationCol" prefWidth="200" text="Location" />
                            <TableColumn fx:id="assignFlightCol" prefWidth="100" text="Flight #" />
                        </columns>
                    </TableView>
                </VBox>
            </HBox>
            
            <Button alignment="TOP_LEFT" onAction="#goBack" style="-fx-background-color: #0B3D91; -fx-text-fill: white; -fx-font-size: 14px;" text="Back" />
        </VBox>
    </center>
</BorderPane>
