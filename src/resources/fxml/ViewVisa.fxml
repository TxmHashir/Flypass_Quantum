<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ViewVisaController">
    <center>
        <VBox alignment="CENTER" spacing="20" style="-fx-background-color: white; -fx-padding: 40;">
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #0B3D91;" text="Visa Details" />
            <VBox spacing="10" style="-fx-border-color: #E6F0FF; -fx-border-radius: 10; -fx-padding: 20;">
                <Label fx:id="visaTypeLabel" style="-fx-font-size: 16px;" text="Visa Type: " />
                <Label fx:id="visaCountryLabel" style="-fx-font-size: 16px;" text="Country: " />
                <Label fx:id="visaStatusLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Status: " />
            </VBox>
            <HBox alignment="CENTER" spacing="20">
                <Button onAction="#goBack" style="-fx-background-color: #0B3D91; -fx-text-fill: white;" text="Back" />
                <Button onAction="#printVisa" style="-fx-background-color: #28a745; -fx-text-fill: white;" text="Download PDF" />
            </HBox>
        </VBox>
    </center>
</BorderPane>