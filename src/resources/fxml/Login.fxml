<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="550" prefWidth="700" style="-fx-background-color: #F4F4F4;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="LoginController">

    <VBox alignment="CENTER" maxHeight="400.0" maxWidth="500.0" spacing="25" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 40;">
        
        <effect>
            <DropShadow color="#00000033" radius="15" spread="0.1" />
        </effect>

        <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #0B3D91;" text="Flypass Quantum Login" />

        <StackPane alignment="CENTER">
            <HBox fx:id="animationBox" alignment="CENTER" spacing="-10"></HBox>
         <Label fx:id="instuctLabel" style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold;" text="Tap Your Card">
    <font>
        <Font name="Fraunces 72pt SemiBold" />
    </font>
</Label>
        </StackPane>

        <HBox alignment="CENTER" spacing="15">
            <Button onAction="#goToSignUp" style="-fx-background-color: #0B3D91; -fx-text-fill: white; -fx-font-size: 14px;" text="Sign Up" />
        </HBox>
        
        <Button onAction="#goToForgetPassword" style="-fx-background-color: transparent; -fx-text-fill: #555570; -fx-font-size: 12px; -fx-cursor: hand;" text="Forgot Password?" />
    </VBox>
</StackPane>