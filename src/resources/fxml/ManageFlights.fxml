<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ManageFlightsController">
    <center>
        <VBox alignment="CENTER" spacing="15" style="-fx-background-color: #f4f6fb;">
            <padding>
                <Insets bottom="40" left="40" right="40" top="40" />
            </padding>
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #0B3D91;" text="Manage Flights" />
            
            <TableView fx:id="flightsTable" prefHeight="400" style="-fx-border-color: #E6F0FF; -fx-background-color: white;">
                <columns>
                    <TableColumn fx:id="flightNoCol" prefWidth="100" text="Flight #" />
                    <TableColumn fx:id="originCol" prefWidth="150" text="Origin" />
                    <TableColumn fx:id="destCol" prefWidth="150" text="Destination" />
                    <TableColumn fx:id="scheduleCol" prefWidth="200" text="Schedule" />
                    <TableColumn fx:id="statusCol" prefWidth="120" text="Status" />
                    <TableColumn fx:id="typeCol" prefWidth="120" text="Type" />
                    <TableColumn fx:id="priceCol" prefWidth="100" text="Price" /> <!-- Added this missing column -->
                </columns>
            </TableView>
            
            <HBox alignment="CENTER" spacing="15">
                <Button onAction="#addFlight" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5;" text="Add Flight" />
                <Button onAction="#editFlight" style="-fx-background-color: #0B3D91; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5;" text="Edit Flight" />
                <Button onAction="#deleteFlight" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5;" text="Delete Flight" />
                <Button onAction="#goBack" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5;" text="Back" />
            </HBox>
        </VBox>
    </center>
</BorderPane>