<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>  <!-- New import for ImageView -->

<StackPane prefHeight="550.0" prefWidth="700.0" 
           style="-fx-background-color: #F4F4F4;" 
           xmlns="http://javafx.com/javafx/8.0.171" 
           xmlns:fx="http://javafx.com/fxml/1" 
           fx:controller="SignUpController">
    
    <children>
        <VBox alignment="CENTER" maxHeight="500.0" maxWidth="550.0" spacing="25.0" 
              style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 40;">
            <effect>
                <DropShadow color="#00000033" radius="15" spread="0.1" />
            </effect>
            
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #0B3D91;" text="Sign Up" />
            
            <GridPane hgap="10.0" vgap="10.0">
                <Label text="Name:" GridPane.rowIndex="0" />
                <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.columnSpan="2" />
                
                <Label text="CNIC:" GridPane.rowIndex="1" />
                <TextField fx:id="cnicField" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.columnSpan="2" />
                
                <Label text="Contact:" GridPane.rowIndex="2" />
                <TextField fx:id="contactField" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.columnSpan="2" />
                
                <Label text="Email:" GridPane.rowIndex="3" />
                <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.columnSpan="2" />
                
                <Label text="Passport #:" GridPane.rowIndex="4" />
                <TextField fx:id="passportField" GridPane.columnIndex="1" GridPane.rowIndex="4" GridPane.columnSpan="2" />
                
                <Label text="Citizenship:" GridPane.rowIndex="5" />
                <TextField fx:id="citizenshipField" GridPane.columnIndex="1" GridPane.rowIndex="5" GridPane.columnSpan="2" />
                
                <Label text="Country:" GridPane.rowIndex="6" />
                <TextField fx:id="countryField" GridPane.columnIndex="1" GridPane.rowIndex="6" GridPane.columnSpan="2" />
                
                <Label text="City:" GridPane.rowIndex="7" />
                <TextField fx:id="cityField" GridPane.columnIndex="1" GridPane.rowIndex="7" GridPane.columnSpan="2" />
                
                <Label text="Postal Code:" GridPane.rowIndex="8" />
                <TextField fx:id="postalCodeField" GridPane.columnIndex="1" GridPane.rowIndex="8" GridPane.columnSpan="2" />
                
                <Label text="Visa Type:" GridPane.rowIndex="9" />
                <ComboBox fx:id="visaTypeField" GridPane.columnIndex="1" GridPane.rowIndex="9" GridPane.columnSpan="2" />
                
                <Label text="Visa Country:" GridPane.rowIndex="10" />
                <TextField fx:id="visaCountryField" GridPane.columnIndex="1" GridPane.rowIndex="10" GridPane.columnSpan="2" />
                
                <Label text="Profile Image:" GridPane.rowIndex="11" />
                <TextField fx:id="profileImageField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="11" />
                <Button onAction="#chooseImage" text="Choose" GridPane.columnIndex="2" GridPane.rowIndex="11" />
            </GridPane>
            
            <!-- New: Image preview -->
            <ImageView fx:id="previewImageView" fitHeight="150.0" fitWidth="150.0" preserveRatio="true" />

            <HBox alignment="CENTER" spacing="20.0">
                <Button onAction="#goBack" prefWidth="100.0" 
                        style="-fx-background-color: #9AA0A6; -fx-text-fill: white; -fx-font-size: 14px; -fx-cursor: hand;" 
                        text="Back" />
                <Button onAction="#handleSignUp" prefWidth="100.0" 
                        style="-fx-background-color: #0B3D91; -fx-text-fill: white; -fx-font-size: 14px; -fx-cursor: hand;" 
                        text="Sign Up" />
            </HBox>
        </VBox>
    </children>
</StackPane>