<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="SettingsController">
    <center>
        <VBox spacing="20" alignment="CENTER">
            <padding>
                <Insets top="40" right="40" bottom="40" left="40"/>
            </padding>
            <Button text="Back" onAction="#goBack" style="-fx-background-color: #0B3D91; -fx-text-fill: white; -fx-font-size: 14px;" alignment="TOP_LEFT"/>
            <Label text="Settings" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #0B3D91;"/>
            <Button text="Switch to Dark Mode" onAction="#switchDark" style="-fx-background-color: #0B3D91; -fx-text-fill: white; -fx-font-size: 14px;"/>
            <Button text="Switch to Light Mode" onAction="#switchLight" style="-fx-background-color: #0B3D91; -fx-text-fill: white; -fx-font-size: 14px;"/>
        </VBox>
    </center>
</BorderPane>