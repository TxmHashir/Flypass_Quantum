<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="DutyController">
    <center>
        <VBox spacing="15" alignment="CENTER">
            <padding>
                <Insets top="40" right="40" bottom="40" left="40"/>
            </padding>
            <Button text="Back" onAction="#goBack" style="-fx-background-color: #0B3D91; -fx-text-fill: white; -fx-font-size: 14px;" alignment="TOP_LEFT"/>
            <Label text="Duty Schedule" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #0B3D91;"/>
            <TableView fx:id="dutyTable" prefHeight="400" style="-fx-border-color: #E6F0FF;">
                <columns>
                    <TableColumn text="Time" fx:id="timeCol" prefWidth="150"/>
                    <TableColumn text="Location" fx:id="locationCol" prefWidth="200"/>
                    <TableColumn text="Flight #" fx:id="flightCol" prefWidth="100"/>
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>